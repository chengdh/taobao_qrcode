<%= form_for Logo.new,:url =>logos_path(:format => :json), :html => { :multipart => true, :id => "fileupload",  } do |f| %>
  <!-- The table listing the files available for upload/download -->
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <td colspan='4'>
        <span class="btn btn-success btn-mini fileinput-button">
          <i class="icon-plus icon-white"></i>
          <span><%= t('fileupload.add_files') %></span>
          <%= f.file_field :img, :multiple => false %>
        </span>
        <button type="submit" class="btn btn-mini btn-primary start">
          <i class="icon-upload icon-white"></i>
          <span><%= t('fileupload.start_upload') %></span>
        </button>
        <button type="reset" class="btn  btn-mini btn-warning cancel">
          <i class="icon-ban-circle icon-white"></i>
          <span><%= t('fileupload.cancel_upload') %></span>
        </button>
        <button type="button" class="btn  btn-mini btn-danger delete">
          <i class="icon-trash icon-white"></i>
          <span><%= t('fileupload.delete_multi') %></span>
        </button>
        <input type="checkbox" class="toggle">
      </td>
      <td colspan='2'>
        <div class="progress progress-success progress-striped active fade">
          <div class="bar" style="width:0%;"></div>
        </div>
      </td>
    </tr>
  </thead>
  <tbody class="files" data-toggle="modal-gallery" data-target="#modal-gallery"></tbody>
</table>
<!-- The loading indicator is shown during image processing -->
<div class="fileupload-loading"></div>
<% end %>
<%= render "shared/fileupload/queue" %>
<%= render "shared/fileupload/index" %>
